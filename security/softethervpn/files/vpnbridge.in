#!/bin/sh

# $FreeBSD$
#
# PROVIDE: vpnbridge
# REQUIRE: LOGIN
# KEYWORD: shutdown
#
# Add these lines to /etc/rc.conf.local or /etc/rc.conf
# to enable this service:
#
# vpnbridge_enable (bool):	Set to NO by default.
#				Set it to YES to enable vpnbridge.

. /etc/rc.subr

name=vpnbridge
rcvar=vpnbridge_enable
start_cmd="${name}_start"

load_rc_config $name

: ${vpnbridge_enable:="NO"}

command=%%DATADIR%%/${name}/${name}

vpnbridge_start() {
	${command} start
}

run_rc_command "$1"
